<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCats</title>
  <%= render partial: 'layouts/errors' %>
  <%= flash[:notice] %>
</head>
<body>

<p>
  <% if current_user %>
    You're logged in as <%= current_user.user_name %>
    <%= button_to "Log out", logout_url, method: :get %>
  <% else %>
    <% if params[:controller] == 'sessions' %>
      <%= link_to "Sign up", new_user_url %>
    <% else %>
      <%= link_to "Log in", new_session_url %>
    <% end %>
  <% end %>
</p>

<%= yield %>

</body>
</html>
