<h1>Create a request</h1>

<form action="<%= cat_rental_requests_path %>" method='post' %>
  <input name='authenticity_token'
         type='hidden'
         value='<%= form_authenticity_token %>'>
  <label>Cat:
    <select name='cat_rental_request[cat_id]'>
    <% Cat.all.each do |cat| %>
      <% next if current_user && cat.user_id == current_user.id %>
      <option value='<%= cat.id %>'><%= cat.name %></option>
    <% end %>
    </select>
  </label>

  <label>Start Date:
    <input type="date" name="cat_rental_request[start_date]">
  </label>
  <label>
    <input type="date" name="cat_rental_request[end_date]">
  </label>

  <input type='submit' value='Submit request!'>
</form>
